#!/usr/bin/env rc

if(~ $#* '0'){
	echo 'Usage: take NUM-NUM | -NUM | NUM- | NUMLIST' >[2=1]
	exit 1
}

awk '
BEGIN {
	LIST=1;
	RANGE=2;
	callfun=RANGE;
	uplim=1;
	split(ARGV[1], takes, "-");

	if(ARGV[1]~"^[0-9]+-$")
	{
		low=takes[1];
		uplim=0;
	}
	else if(ARGV[1]~"^-[0-9]+$")
	{
		up=takes[2];
		low=1
	}
	else if(ARGV[1]~"^[0-9]+-[0-9]+$")
	{
		low=takes[1];
		up=takes[2];
	}
	else
	{
		for(i=1; i<ARGC; i++)
			if(ARGV[i]!~"^[0-9]+$"||ARGV[i]~"^0+$")
			{
				print("error: list of positive non-null numbers expected, got \"" ARGV[i] "\", exiting.")
				exit(2);
			}
		callfun=LIST;
		for(i in ARGV)
			list[ARGV[i]]=1;
	}
	ARGV[1]="-";
	for(i=2; i<ARGC; i++)
		delete ARGV[i];
}

callfun==RANGE{
	for(i=low; i<=(uplim?up:NF); i++)
		printf("%s%s", $i, (uplim?(i==up?"":" "):(i==NF?"":" ")));
	printf("\n");
}

callfun==LIST{
	for(i=1; i<=NF; i++)
		if(list[i]==1)
			printf("%s%s", $i, (i==NF?"":" "));
	printf("\n");
}
' $*
